<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <% if params[:plan] == '2' %>
      <div class="alert alert-success">
        <h1>Pro Account</h1>
        <p>Sign up for the pro account for the $10/month and get access to the community and contact information!</p>
      </div>
    <% else %>
      <div class="alert alert-info">
        <h1>Basic Account</h1>
        <p>Sign up for free and get basic access to the community.</p>
      </div>
    <% end %>
  </div>
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <h2>Sign up</h2>
        
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
       
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>